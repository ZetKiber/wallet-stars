# Используем официальный образ Node.js
FROM node:16

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /app

# Копируем только директорию бэкенда в контейнер
COPY wallet-stars-backend/ ./

# Устанавливаем зависимости
RUN npm install

# Указываем, что приложение будет доступно на порту 3000
EXPOSE 3000

# Команда для запуска приложения
CMD ["npm", "start"] 